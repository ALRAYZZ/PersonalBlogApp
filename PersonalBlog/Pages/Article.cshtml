@page "{id:int}"
@model PersonalBlog.Pages.ArticleModel
@{
	ViewData["Title"] = Model.Article?.Title ?? "Article Not Found";
}


@if (Model.Article == null)
{
	<div class="text-center">
		<h2>Article Not Found</h2>
		<p>The article you are looking for does not exist.</p>
	</div>
}
else
{
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="card-body">
					<h1 class="display-4">@Model.Article.Title</h1>
					<p class="text-muted">@Model.Article.Date.ToString("MMMM dd, yyyy")</p>
					<div>@Model.Article.Content</div>
				</div>
			</div>
		</div>
	</div>
}
